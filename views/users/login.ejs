<style>
  .container{
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
  }
  .items{
    width:  370px;
    height: 350px;
    align-self: center;
    background-color: #082c74;
    padding: 20px; 
    border-radius: 2px;
  }

  .items h1{
    color: white;
  }

  .items input{
    width:  90%;
    padding: 10px;
  }
  
  .items input:focus{
    outline: none;
  }

  #warning{
    color: red;
  }

  #subbtn{
    width: 55%;
  }
</style>
<% include('../layouts/header.ejs') %>

  <div class="container">
    <div class="items">
      <center>
        <h1>Treasure Hunt Login</h1>
        <hr>

      
        <%
        if(typeof message !== 'undefined'){
          %>
          <p id="warning"><%= message %></p>
          <%
        }
        else{
          %>
          <p></p>
          <%
        }
        %>

      
        <form action="/login" method="post">
          <input type="email" name="email" id="" placeholder="Enter your email">
          <br><br>
          <input type="password" name="password" id="" placeholder="Enter your password">
          <br><br><br>
          <input type="submit" value="Login" id="subbtn">
        </form>
      
      </center>

    </div>
  </div>



<% include('../layouts/footer.ejs') %>